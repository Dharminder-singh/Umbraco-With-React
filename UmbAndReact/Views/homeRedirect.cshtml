
@inherits UmbracoViewPage
@{
    IEnumerable<IPublishedContent> rootNode = Umbraco.ContentAtRoot();
    var home = rootNode.FirstOrDefault(x => x.IsDocumentType("contentPage"));

    if (home != null)
    {
        Context.Response.Redirect(home.Url());
    }
    else
    {
        <h2>@Umbraco.GetDictionaryValue("USN Website Not Published")</h2>
    }
}
